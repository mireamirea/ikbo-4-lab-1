#include<stdio.h>
#include<stdlib.h>
struct paket {
    int a;
    char c[256];
    float b;
};
int main(int argc, char **argv) {
    struct paket d;
    char name[128];
    FILE *fp=NULL;
    if (argc>=2) fp = fopen(argv[1], "rb");
    while (fp == NULL){
        printf("the file was unable to access\n");
        printf("enter file name\n");
        gets(name);
        fp = fopen(name, "rb");
    }
    while (fread(&d, sizeof(struct paket), 1, fp)) {
        printf("%d %s %f\n", d.a, d.c, d.b);
    }
    fseek(fp, 0, SEEK_END); // Переместиться в конец файла.
    long size = ftell(fp); // Получить номер байта, на который мы смотрим
    fseek(fp, 0, SEEK_SET); // Переместиться в конец файла
    printf("%ld %lu", size, size / sizeof(struct paket));//выводит размер файла в байтах, количество структур
    fclose(fp);
}
